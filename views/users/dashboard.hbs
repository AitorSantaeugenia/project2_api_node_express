<h3>List of your favorite cryptocurrencies</h3>
<table class="table table-dark" id="favoriteCoinsTable">
    <thead>
        <tr>
            <th scope="col">Crypto</th>
            <th scope="col">Symbol</th>
            <th scope="col">Price in USD</th>
            <th scope="col">% 24h</th>
            <th scope="col">% 1d</th>
            <th scope="col">% 7d</th>
            <th scope="col">Rank</th>
            <th scope="col">Remove from fav.</th>
        </tr>
    </thead>
    <tbody>
        {{#each userInSession.cryptocurrency}}
        <tr>
            <th scope="row">{{name}}</th>
            <td>{{symbol}}</td>
            <td>$ {{price_usd}}</td>
            <td>{{percent_change_24h}}</td>
            <td>{{percent_change_1h}}</td>
            <td>{{percent_change_7d}}</td>
            <td>{{apiID}}</td>
            <td>
                <form action="/delete" method="POST">
                    <input type="hidden" name="id" value={{_id}}>
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </td>
        </tr>

        <tr>
            <td><a href="https://www.binance.com/es/trade/{{symbol}}_BUSD" class="clearA" target="_blank">
                    <buton class="btn btn-success btn-block">Buy on binance</buton>
                </a>
            </td>
            <td><a href="https://www.coinbase.com/es/price/{{name}}" class="clearA" target="_blank">
                    <buton class="btn btn-success btn-block">Buy on coinbase</buton>
                </a>
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Add a note
                </button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<!-- TABLA CRYPTOS FAVORITAS -->
{{else}}
<p>Still no logged in user, sorry!</p>
{{/if}}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add a note to this Crypto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/add-comment" id="usrform">
                    <textarea name="comment" form="usrform" placeholder="Add a note..." class="form-control"
                        rows="3"></textarea>
                    <input type="hidden" name="iduser" value={{ userInSession.id }}>
                    <input type="hidden" name="idcrypto" value={{_id}}>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
