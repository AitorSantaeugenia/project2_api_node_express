{{!-- views/auth/signup.hbs --}}
<div class="container2 d-flex flex-column text-center">
    <div id="borderDivHolder" class="d-flex flex-column text-center">
        <div id="form" class="d-flex flex-column">
            <div class="d-flex flex-column text-left textDivTitleLogin">
                <h2>Create an account</h2>
                <p>Gain access to additional features such as Watchlist and Portfolio tracking.</p>
                <p>Already have an account? <a class="createAccount clearA" href="/login">Log in</a></p>
            </div>
            <form action="/signup" method="POST" class="d-flex flex-column">
                <div class="d-flex flex-column">
                    <label> Username <br>
                        <input type="text" name="username" class="maxWidthInput" placeholder="username" required />
                    </label>

                    <label> Email <br>
                        <input type="email" name="email" class="maxWidthInput" placeholder="ironhack@ironhack.com"
                            required />
                    </label>

                    <label> Password <br>
                        <input type="password" class="maxWidthInput" name="password" placeholder="********" required />
                    </label>

                    <div>
                        <button type="submit" class="btn btn-dark maxWidthInput">Create an account</button>
                    </div> <br>
                    {{#if errorMessage}}
                    <div class="alert alert-danger" role="alert">
                        <p class="error">{{errorMessage}}</p>
                    </div>
                    {{/if}}


                </div>
            </form>
        </div>
    </div>

</div>