{{!-- views/auth/login.hbs --}}
<div class="container2 d-flex flex-column text-center">
    <div id="borderDivHolder" class="d-flex flex-column text-center">
        <div id="form" class="d-flex flex-column">
            <div class="d-flex flex-column text-left textDivTitleLogin">
                <h2>Log in</h2>
                <p class="newToMarket colorGrey">New to Market scraper? <a class="createAccount clearA"
                        href="/signup">Create an
                        account</a>
                </p>
            </div>

            <form action="/login" method="POST" class="d-flex flex-column">
                <div class="d-flex flex-column">
                    <label> Email<br>
                        <input type="email" name="email" class="maxWidthInput" placeholder="ironhack@ironhack.com"
                            required />
                    </label>

                    <label>Password<br>
                        <input type="password" name="password" class="maxWidthInput" placeholder="********" required />
                    </label>
                </div>
                <div>
                    <button type="submit" class="btn btn-dark btnInputIndex maxWidthInput">Log in</button>
                </div>
                {{#if errorMessage}}
                <div class="alert alert-danger" role="alert">
                    <p class="error">{{errorMessage}}</p>
                </div>
                {{/if}}
            </form>
        </div>
    </div>
</div>