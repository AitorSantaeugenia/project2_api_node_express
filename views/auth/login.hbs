{{!-- views/auth/login.hbs --}}
<div class="container2 d-flex flex-column text-center">
    <div id="form">
        <h2>Login</h2>

        <form action="/login" method="POST" class="d-flex flex-column">
            <div class="d-flex flex-column">
                <label> Email<br>
                    <input type="email" name="email" class="maxWidthInput" placeholder="rockstar@ironhack.com"
                        required />
                </label>

                <label>Password<br>
                    <input type="password" name="password" class="maxWidthInput" placeholder="********" required />
                </label>
            </div>
            {{#if errorMessage}}
            <div class="alert alert-danger" role="alert">
                <p class="error">{{errorMessage}}</p>
            </div>
            {{/if}}
            <div>
                <button type="submit" class="btn btn-dark btnInputIndex maxWidthInput">Login</button>
            </div>
        </form>
    </div>
    <a href="/"><button class="btn btn-dark btnInputIndex maxWidthInput">Home</button></a>
</div>